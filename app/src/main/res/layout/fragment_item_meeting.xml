<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/fragment_item_meeting">

    <ImageView
        android:id="@+id/item_list_meeting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_subject_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:text="Subject meeting"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting"
        app:layout_constraintEnd_toStartOf="@+id/item_hour_meeting"
        app:layout_constraintStart_toEndOf="@+id/item_list_meeting"
        app:layout_constraintTop_toTopOf="@+id/item_list_meeting" />

    <TextView
        android:id="@+id/item_hour_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="28dp"
        android:text="Hour meeting"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting"
        app:layout_constraintEnd_toStartOf="@+id/item_room_meeting"
        app:layout_constraintStart_toEndOf="@+id/item_subject_meeting"
        app:layout_constraintTop_toTopOf="@+id/item_list_meeting" />

    <TextView
        android:id="@+id/item_room_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:text="Room meeting"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting"
        app:layout_constraintEnd_toStartOf="@+id/item_list_delete_button"
        app:layout_constraintStart_toEndOf="@+id/item_hour_meeting"
        app:layout_constraintTop_toTopOf="@+id/item_list_meeting" />

    <TextView
        android:id="@+id/item_participant_meeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Participant meeting"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting"
        app:layout_constraintEnd_toEndOf="@+id/item_room_meeting"
        app:layout_constraintStart_toStartOf="@+id/item_subject_meeting"
        app:layout_constraintTop_toBottomOf="@+id/item_subject_meeting" />

    <ImageButton
        android:id="@+id/item_list_delete_button"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_list_meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_list_meeting"
        app:srcCompat="@drawable/ic_delete_white_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>